    <profiles>
        <profile>
            <id>dev-retriblet</id>
            <properties>
                <!--suppress UnresolvedMavenProperty -->
                <datasource.url>jdbc:mysql://${env.MYSQL_HOST}:${env.MYSQL_PORT}/miniai?serverTimezone=UTC&amp;useSSL=false&amp;allowPublicKeyRetrieval=true</datasource.url>
